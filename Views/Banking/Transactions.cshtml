@model IEnumerable<UFS_BANK_FINAL.Models.Transaction>

@{
    ViewBag.Title = "Transaction History";
}

<h2>Transaction History</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Destination Account</th>
            <th>Amount</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.ModifyDate.ToString("dd'/'MM'/'yyyy")</td>
                    <td>@(transaction.DestAccount == 0 ? "Current Account" : transaction.DestAccount.ToString())</td>
                    <td>@transaction.Amount.ToString("C")</td>
                    <td>@transaction.TransactionType</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No transactions found.</td>
            </tr>
        }
    </tbody>
</table>
