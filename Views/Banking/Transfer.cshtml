@model UFS_BANK_FINAL.Models.Transaction

<h2>Transfer</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Transfer" method="post">
    <div>
        <label>From Account Number:</label>
        <input type="number" name="fromAccountNumber" required />
    </div>
    <div>
        <label>To Account Number:</label>
        <input type="number" name="toAccountNumber" required />
    </div>
    <div>
        <label>Amount:</label>
        <input type="number" step="0.01" name="amount" required />
    </div>
    <div>
        <button type="submit">Transfer</button>
    </div>
    @Html.ValidationSummary(true)
</form>
