@model UFS_BANK_FINAL.Models.Transaction

<h2>Deposit</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Deposit" method="post" class="p-4 border rounded shadow-sm bg-light" style="max-width: 400px; margin: auto;">
    <div class="mb-3">
        <label class="form-label">Account Number:</label>
        <input type="number" name="accountNumber" class="form-control" placeholder="Enter your account number" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Amount:</label>
        <input type="number" step="0.01" name="amount" class="form-control" placeholder="Enter deposit amount" required />
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Deposit</button>
    </div>
    <div class="mt-3">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
</form>

